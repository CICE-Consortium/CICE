#==============================================================================
# Macros file for ERDC onyx, cray compiler
#==============================================================================

CPP        := ftn -e P
CPPDEFS    := -DFORTRANUNDERSCORE -DNO_R16 ${ICE_CPPDEFS}
CFLAGS     := -c -O2 -h fp0 

FIXEDFLAGS := -132
FREEFLAGS  := 
FFLAGS     := -h fp0 -h byteswapio 
FFLAGS_NOOPT:= -O0
LDFLAGS    := -h byteswapio

ifeq ($(ICE_BLDDEBUG), true)
  FFLAGS     += -O0 -g -Rbcdps
else
  FFLAGS     += -O2
endif

SCC   := cc 
SFC   := ftn
MPICC := cc
MPIFC := ftn

ifeq ($(ICE_COMMDIR), mpi)
  FC := $(MPIFC)
  CC := $(MPICC)
else
  FC := $(SFC)
  CC := $(SCC)
endif
LD:= $(FC)

