CPP        := pgcc -E 
CPPDEFS    := -DFORTRANUNDERSCORE -DNO_R16 -DHAVE_F2008_CONTIGUOUS -DLINUX -DCPRINTEL ${ICE_CPPDEFS}
CFLAGS     := -c -O2 -Kieee

FIXEDFLAGS := -Mextend
FREEFLAGS  := -Mfree
FFLAGS     := -Kieee -Mbyteswapio -traceback 
FFLAGS_NOOPT:= -O0

ifeq ($(ICE_BLDDEBUG), true)
  FFLAGS     += -O0 -g -Mbounds -Mchkptr
else
  FFLAGS     += -O -g
endif

ifeq ($(ICE_COMMDIR), mpi)
  FC         := ftn
else
  FC         := ftn
endif

MPICC:= cc

MPIFC:= ftn
LD:= $(MPIFC)

